{
  "kind": "singleType",
  "collectionName": "homepages",
  "info": {
    "singularName": "homepage",
    "pluralName": "homepages",
    "displayName": "Homepage"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {
    "i18n": {
      "localized": false
    }
  },
  "attributes": {
    "logo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "navbar": {
      "type": "component",
      "component": "general.navlink",
      "repeatable": true
    },
    "heroTitle": {
      "type": "string",
      "required": true
    },
    "heroSubtitle": {
      "type": "text"
    },
    "heroButtons": {
      "type": "component",
      "component": "general.button",
      "repeatable": true
    },
    "heroImages": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images"
      ]
    },
    "contentSections": {
      "type": "dynamiczone",
      "components": [
        "sections.text-card",
        "sections.number",
        "sections.text-image"
      ]
    }
  }
}
