{
  "kind": "singleType",
  "collectionName": "services_pages",
  "info": {
    "singularName": "services-page",
    "pluralName": "services-pages",
    "displayName": "Services Page"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {
    "i18n": {
      "localized": false
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "subtitle": {
      "type": "string"
    },
    "heroImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "contentSections": {
      "type": "dynamiczone",
      "components": [
        "sections.service",
        "sections.text-card",
        "sections.text-image",
        "sections.testimonial",
        "sections.number"
      ]
    },
    "heroTitle": {
      "type": "string",
      "default": "Practical, Application-Driven\nProgrammes"
    },
    "heroDescription": {
      "type": "text"
    },
    "benefitsTitle": {
      "type": "string",
      "default": "Leadership Communication Development"
    },
    "benefitsDescription": {
      "type": "text"
    },
    "outcomesTitle": {
      "type": "string",
      "default": "Building Confidence in Client Interactions"
    },
    "outcomesDescription": {
      "type": "text"
    },
    "processTitle": {
      "type": "string",
      "default": "Flexible Delivery Options"
    },
    "ctaTitle": {
      "type": "string",
      "default": "Ready to Partner?"
    },
    "ctaDescription": {
      "type": "text"
    }
  }
}
